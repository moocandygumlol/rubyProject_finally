<p style="color: green"><%= notice %></p>
<div class = "text-center">
  <h1>Items</h1>
  <hr>
  
  <div id="items">
    <% @items.each do |item| %>
      <%= render item %>
      <p>
        <%= link_to "Show this item", item %>
      </p>
    <% end %>
  </div>
  <%= link_to "New item", new_item_path, class: "btn btn-success"%> |
  <%= link_to "Back to home", main_path, class: "btn btn-primary" %>
</div>