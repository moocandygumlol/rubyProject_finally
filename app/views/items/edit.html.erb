<div class = "text-center h1">Editing Item</div>
<hr>
<div class = "text-center mt-3">
  <%= render "form", item: @item %>
<div>
<% if @item.picture.attached?%>
  <%= image_tag rails_blob_path(@item.picture, disposition: :attachment), style: "width: 400px", class: "mt-3 mb-3" %>
<%end%>
<br>

<div>
  <%= link_to "Show this item", @item , class: "btn btn-secondary"%> |
  <%= link_to "Back to items", items_path , class: "btn btn-primary" %>
</div>
